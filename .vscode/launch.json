  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver"],
      "django": true,
      "justMyCode": true
    },
    {
      "name": "Pytest Current File",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Pytest All",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["."],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
